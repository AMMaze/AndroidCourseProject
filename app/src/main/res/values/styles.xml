<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DefaultBtn">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:background">@color/color_primary_light</item>
    </style>

    <style name="RoundedBtn">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:background">@drawable/btn_rounded</item>
    </style>

    <style name="DefaultText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TvShadows">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.DayNight">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingBottom">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>
