<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weather_data_card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weather_data_card"
        android:layout_margin="@dimen/small_margin"
        android:layout_gravity="center"
        style="@style/CardViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weather_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperatureFiller"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="@style/DefaultText"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_data_icon"
                android:src="@drawable/ic_cloud_clouds_cloudy_weather_icon"
                android:layout_toEndOf="@id/weather_data"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
